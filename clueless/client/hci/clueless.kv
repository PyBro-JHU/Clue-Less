<InstrumentPanel>:
    BoxLayout:
        orientation: 'vertical'
        padding: 5
        spacing: 5

        Label:
            size_hint_y: 0.1
            pos_hint: {'x': 1}
            text: 'Notifications'
                
        TextInput:
            size_hint_y: 1.5
            pos_hint: {'x': 1}
            text: 'Miss Scarlet moved into the Library.'
        
        Label:
            size_hint_y: 0.1
            pos_hint: {'x': 1}
            text: 'Detective Notebook'
             
        TextInput:
            size_hint_y: 1.5
            pos_hint: {'x': 1}
            text: 'Me - Person: Miss Scarlet\nMe - Room: Library\nMe - Weapon: Knife\nPlayer 2 - Room: Kitchen'

        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'x': 1}
            padding: 5
            spacing: 5
            Button:
                on_release: root.suggest_popup()
                text: 'Suggest'
            Button:
                on_release: root.accuse_popup()
                text: 'Accuse'
            Button:
                text: 'End Turn'

<AccusationPopup>:
    auto_dismiss: False
    title: 'Accusation'
    size_hint: None, None
    size: '500dp', '300dp'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Select a Suspect, Room, and Weapon to make an Accusation.'
        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            Spinner:
                size_hint_y: None
                height: 34
                text: 'Suspect'
                values: 'Miss Scarlet', 'Colonel Mustard', 'Professor Plum', 'Mr. Green', 'Mrs. White', 'Mrs. Peacock'
            Spinner:
                size_hint_y: None
                height: 34
                text: 'Room'
                values: 'Study', 'Hall', 'Lounge', 'Library', 'Billiard Room', 'Dining Room', 'Conservatory', 'Ballroom', 'Kitchen'
            Spinner:
                size_hint_y: None
                height: 34
                text: 'Weapon'
                values: 'Rope', 'Lead Pipe', 'Knife', 'Wrench', 'Candlestick', 'Revolver'
        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            Button:
                text: 'Make Accusation'
                size_hint_y: None
                height: '50sp'
                on_release: root.confirm_popup()
            Button:
                text: 'Cancel'
                size_hint_y: None
                height: '50sp'
                on_release: root.dismiss()
                    
<SuggestionPopup>:
    auto_dismiss: False
    title: 'Suggestion'
    size_hint: None, None
    size: '500dp', '300dp'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Select a Suspect and Weapon to make a Suggestion.'
        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            Spinner:
                size_hint_y: None
                height: 34
                text: 'Suspect'
                values: 'Miss Scarlet', 'Colonel Mustard', 'Professor Plum', 'Mr. Green', 'Mrs. White', 'Mrs. Peacock'
            Spinner:
                size_hint_y: None
                height: 34
                text: 'Weapon'
                values: 'Rope', 'Lead Pipe', 'Knife', 'Wrench', 'Candlestick', 'Revolver'
        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 5
            Button:
                text: 'Make Suggestion'
                size_hint_y: None
                height: '50sp'
                on_release: root.dismiss()
            Button:
                text: 'Cancel'
                size_hint_y: None
                height: '50sp'
                on_release: root.dismiss()
                    